
@{
    ViewBag.Title = "Technology";
    Layout = "~/Views/Shared/_LayoutCenter.cshtml";
}

<style>

    .text {
        margin: 15px 0px;
    }

    .fa {
        color: #4183D7;
    }

    .same {
        padding: 12px;
    }
</style>
<div class="header pb-6" style="background-color:orange">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-12 col-12">
                    <h6 class="h2 text-white d-inline-block mb-0"> Công nghệ</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Công nghệ</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-xl-12">
                    <div class="col-xl-7">
                        <p style="color:white">Thẻ là một từ khóa hoặc nhãn phân loại câu hỏi của bạn với các câu hỏi tương tự khác. Việc sử dụng các thẻ phù hợp giúp người khác tìm và trả lời câu hỏi của bạn dễ dàng hơn.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mt--6" ng-app="myApp" ng-controller="myCtrl">
    <div class="row">
        <div class="col-xl-12">
            <div class="row">
                <div class="col-xl-7">
                    <div class="form-group mt--3">
                        <div class="input-group input-group-alternative input-group-merge ">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="background-color:#f8f9fe"><i class="fas fa-search"></i></span>
                            </div>
                            <input class="form-control" style="background-color:#f8f9fe;" placeholder="Tìm ............................." type="text">
                        </div>
                    </div>
                </div>
                <div class="col-xl-5 text-right">
                    <div class="">
                        <a class="#"><i class="far fa-snowflake text-white"></i> Hot</a> /
                        <a class="#">Nhiều thành viên</a> /
                        <a class="#">Hỏi nhiều</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-12 mt--3">
            <div class="row" id="AllQuestionPage">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 same" ng-repeat="x in listTechnology">

                    <div class="text-left border" style="background-color:#f8f9fe;padding:10px">

                        <div class="title">
                            <a href="#" class="badge badge-pill badge-info text-uppercase"><i class="fas fa-tag"></i>{{x.technology_name}}</a>
                        </div>

                        <div class="text">
                            <span>{{x.technology_note}} Lorem ipsum dolor sit amet, id quo eruditi eloquentiam. Assum decore te sed. Elitr scripta ocurreret qui ad.</span>
                        </div>
                        <div class="row">
                            <div class="col-xl-5">
                                <p class="text-left text-muted mb-0" style="font-size:12px;font-family:Arial">{{x.technology_totalQuestion}} Câu hỏi</p>
                            </div>
                            <div class="col-xl-7">

                                <p class="text-left text-muted mb-0" style="font-size:12px;font-family:Arial">834 asked today, 5355 this week</p>
                            </div>
                        </div>
                    </div>
                </div>
                @for (var i = 0; i < 25; i++)
                {
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 same">

                        <div class="text-left border" style="background-color:#f8f9fe;padding:10px">

                            <div class="title">
                                <a href="#" class="badge badge-pill badge-info text-uppercase"><i class="fas fa-tag"></i>PHP</a>
                            </div>

                            <div class="text">
                                <span>Lorem ipsum dolor sit amet, id quo eruditi eloquentiam. Assum decore te sed. Elitr scripta ocurreret qui ad.</span>
                            </div>
                            <div class="row">
                                <div class="col-xl-5">
                                    <p class="text-left text-muted mb-0" style="font-size:12px;font-family:Arial">89797 Câu hỏi</p>
                                </div>
                                <div class="col-xl-7">

                                    <p class="text-left text-muted mb-0" style="font-size:12px;font-family:Arial">834 asked today, 5355 this week</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <div class="col-xl-12">
                    <!--phân trang-->
                    phân trang
                </div>

            </div>
        </div>


    </div>
</div>
<script>
    var app = angular.module('myApp', []);
    app.controller('myCtrl', function ($scope, $http) {
        $http.get("/View/ListTechnology")
            .then(function (response) {
                // First function handles success
                $scope.listTechnology = response.data;
            }, function (response) {
                // Second function handles error
                $scope.listTechnology = "Something went wrong";
            });
    });
</script>
