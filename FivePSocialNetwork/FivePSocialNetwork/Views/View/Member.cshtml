
@{
    ViewBag.Title = "Member";
    Layout = "~/Views/Shared/_LayoutCenter.cshtml";
}

<div class="header bg-primary pb-6" >
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0"> Thành viên</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Thành viên</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="@Url.Action("PostQuestion","Question")" class="btn btn-sm btn-neutral"><i class="far fa-paper-plane"></i> Đặt câu hỏi?</a>
                    <a href="#" class="btn btn-sm btn-neutral"><i class="far fa-edit"></i> Đăng bài viết </a>
                </div>
                <div class="col-xl-12">
                    <div class="col-xl-7">
                        <p style="color:white">Đây là tất cả các thành viên nhiệt huyết của 5P, đóng góp cho sự phát triển của 5P và của xã hội và những con người ham học hỏi.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mt--6" ng-app="myApp">
    <div class="row">
        <div class=col-xl-12>   
            <div class="row">
                <div class="col-xl-7">
                    <div class="btn-group float-left mb-3 mt--4" role="group" aria-label="Basic example">
                        <button type="button" class="btn btn-outline-default">Pro<i class="far fa-snowflake text-danger"></i></button>
                        <button type="button" class="btn btn-secondary">Mới</button>
                        <button type="button" class="btn btn-secondary">Chung công nghệ</button>
                        <button type="button" class="btn btn-secondary">Nổi tiếng</button>
                    </div>
                </div>
                <div class="col-xl-5 text-right">
                    <div class="mb-3 mt--4">
                        <a class="btn btn-link text-secondary">Tuần</a>|
                        <a class="btn btn-link text-secondary">Tháng</a>|
                        <a class="btn btn-link text-secondary">Năm</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-12 card">

            <div class="row" ng-controller="myCtrl">

                <div class="col-xl-12">
                    <div class="row">
                        <div class="col-xl-3 p-3 cardlist" ng-repeat="x in listMember">
                            <div class="row">
                                <div class="col-5">
                                    <a href="#" class="w-100">
                                        <img src="~/Image/Users/{{x.user_avatar}}" class="mx-auto d-block mb-1 addcartimg" style="width:104px;height:104px" />
                                    </a>
                                </div>
                                <div class="col-7">
                                    <div class="d-block text-truncate mb-1">
                                        <a href="cateview.php" class="cartproname">{{x.user_firstName + " " + x.user_lastName}}</a>
                                    </div>
                                    <div class="seller d-block">
                                        <span>Nổi: 54847{{x.user_popular}} <i class="fas fa-fire" style="color:red"></i> </span>
                                        
                                    </div>
                                    <div class="cartviewprice d-block">
                                        <span class="amt">{{x.user_vipMedal}}7<i class="fab fa-galactic-senate" style="color:orangered;font-size:28px"></i></span>
                                        <span class="oldamt">{{x.user_goldMedal}}8<i class="fas fa-medal" style="color:yellow"></i></span>
                                        <span class="disamt">{{x.user_silverMedal}}7<i class="fas fa-medal" style="color:silver"></i></span>
                                        <span class="disamt">{{x.user_brozeMedal}}5<i class="fas fa-medal" style="color:#e88d15"></i></span>
                                    </div>
                                    <div class="cartviewprice d-block">
                                        <span><i class="fas fa-reply"></i> {{x.total_answer}}</span>
                                        <span><i class="fas fa-question"></i> {{x.total_Question}}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-12">
                            <!--phân trang-->
                            phân trang

                        </div>

                    </div>

                </div>


            </div>

        </div>
    </div>

</div>
<script>
    var app = angular.module('myApp', []);
    app.controller('myCtrl', function ($scope, $http) {
        $http.get("/View/ListMenber")
            .then(function (response) {
                // First function handles success
                $scope.listMember = response.data;
            }, function (response) {
                // Second function handles error
                $scope.listMember = "Something went wrong";
            });
    });
</script>