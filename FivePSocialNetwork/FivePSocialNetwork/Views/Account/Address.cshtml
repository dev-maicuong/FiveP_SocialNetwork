@using FivePSocialNetwork.Models;
@{
    if (Request.Cookies["user_id"] == null)
    {
        Response.Redirect("/Center/IndexCenter");
    }
    int user_id = int.Parse(Request.Cookies["user_id"].Value.ToString());
    FivePSocialNetWorkEntities db = new FivePSocialNetWorkEntities();
    User user = db.Users.Find(user_id);
    ViewBag.Title = "Address";
    Layout = "~/Views/Shared/_LayoutCenter.cshtml";

}

<style>
    .bg-primary {
        background-color: #525f7f !important;
    }

    a {
        color: white;
        text-decoration: none;
    }

        a:hover {
            color: #00A0C6;
            text-decoration: none;
            cursor: pointer;
        }
</style>
<div class="header bg-primary pb-6" ng-app="myApp">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Cài đặt địa chỉ</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Địa chỉ</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    ...
                </div>
                <div class="col-xl-12">
                    <u style="color:white">Bổ xung địa chỉ để chúng tôi có thể giúp bạn kết bạn với những người bạn gần.</u>
                </div>
                <div class="col-xl-12 mt-3" ng-controller="myCtrl">
                    <div class="row" style="color:white">
                        <div class="col-xl-7">
                            <a data-toggle="collapse" href="#collapseExampleName" role="button" aria-expanded="false" aria-controls="collapseExample">
                                <i class="fas fa-map-marked-alt"></i> Bạn đang ở ...
                            </a>
                            <div class="collapse" id="collapseExampleName">
                                <div class="card card-body">
                                    <form action="#" method="post">
                                        <select name="#" class="form-control">
                                            <option value="0">Chọn tỉnh ( thành phố )</option>
                                            <option ng-repeat="x in listProvincail" value="{{x.provincial_id}}" >{{x.provincial_name}}</option>
                                        </select><br />
                                        <select name="#" class="form-control">
                                            <option>Huyện ( quận )</option>
                                            <option ng-repeat="y in listDistrict" value="{{y.district_id}}">{{y.district_name}}</option>
                                        </select><br />
                                        <select name="#" class="form-control">
                                            <option>Xã</option>
                                        </select><br />
                                        <input type="text" name="#" class="form-control" placeholder="Địa chỉ cụ thể sau huyện .."/>
                                        <br />
                                        <button type="submit" class="btn btn-success float-right"><i class="far fa-save"></i> Lưu</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var app = angular.module('myApp', []);
    app.controller('myCtrl', function ($scope, $http) {
        $http({
            method: "GET",
            url: "/Account/ListProvincial"
        }).then(function mySuccess(response) {
            $scope.listProvincail = response.data;
        }, function myError(response) {
            $scope.myWelcome = response.statusText;
        });
        $scope.district = function (id) {
            $http({
                method: "GET",
                url: "/Account/ListDistrict?id=" + id
            }).then(function mySuccess(response) {
                $scope.listDistrict = response.data;
            }, function myError(response) {
                $scope.myWelcome = response.statusText;
            });
        };
        
    });
</script>

