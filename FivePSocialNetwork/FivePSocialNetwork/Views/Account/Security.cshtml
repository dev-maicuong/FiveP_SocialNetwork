@using FivePSocialNetwork.Models;
@{
    if (Request.Cookies["user_id"] == null)
    {
        Response.Redirect("/Center/IndexCenter");
    }
    int user_id = int.Parse(Request.Cookies["user_id"].Value.ToString());
    FivePSocialNetWorkEntities db = new FivePSocialNetWorkEntities();
    User user = db.Users.Find(user_id);

    ViewBag.Title = "Security";
    Layout = "~/Views/Shared/_LayoutCenter.cshtml";
}


<style>
    .bg-primary {
        background-color: #525f7f !important;
    }

    a {
        color: white;
        text-decoration: none;
    }

        a:hover {
            color: #00A0C6;
            text-decoration: none;
            cursor: pointer;
        }
</style> 
<div class="header bg-primary pb-6" ng-app="myApp">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Bảo mật</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Bảo mật</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    ...
                </div>
                <div class="col-xl-12">
                    <u style="color:white">Bổ xung email và sổ điện thoại để bảo mật tài khoản của bạn ( lấy lại tài khoản khi bạn quên ).</u>
                </div>
                <div class="col-xl-12 mt-3">
                    <div class="row" style="color:white">
                        <div class="col-xl-7">
                            <a data-toggle="collapse" href="#collapseExampleEmail" role="button" aria-expanded="false" aria-controls="collapseExample">
                                <i class="fas fa-envelope"></i> Email đăng nhập* đã xác thực.
                                 
                            </a>
                            <div class="collapse" id="collapseExampleEmail">
                                <div class="card card-body">
                                    <form action="@Url.Action("Email","Account")" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="email" name="user_email" class="form-control" placeholder="Email .." value="@user.user_email"/><br />
                                        <button type="submit" class="btn btn-success float-right"><i class="far fa-save"></i> Lưu</button>
                                    </form>
                                    <a href="@Url.Action("EmailSend","Account")" class="btn btn-dark">Xác thực email</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-7">
                            <a data-toggle="collapse" href="#collapseExampleNumberPhone" role="button" aria-expanded="false" aria-controls="collapseExample">
                                <i class="fas fa-phone"></i> Số điện thoại* Chưa xác thực.

                            </a>
                            <div class="collapse" id="collapseExampleNumberPhone">
                                <div class="card card-body">
                                    <form action="@Url.Action("Numberphone","Account")" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="number" name="user_phone" class="form-control" placeholder="Số điện thoại .." value="@user.user_phone"/><br />
                                        <button type="submit" class="btn btn-success float-right"><i class="far fa-save"></i> Lưu</button>
                                    </form>
                                    <br />
                                    <a href="@Url.Action("NumberPhoneVerification","Account")" class="btn btn-dark">Xác thực số điện thoại</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-7" ng-controller="myCtrl">
                            Đăng nhập 2 lớp :&nbsp;&nbsp;&nbsp;
                            <label class="custom-toggle">
                                <input type="checkbox" ng-click="changeAuthentication()"/>
                                <span class="custom-toggle-slider rounded-circle"></span>
                            </label>
                            &nbsp;&nbsp;&nbsp; <span>tắt.</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var app = angular.module('myApp', []);
    app.controller('myCtrl', function ($scope, $http) {
        $scope.changeAuthentication = function () {
            $http({
                method: "GET",
                url: "/Account/ChangeLoginAuthentication"
            }).then(function mySuccess(response) {
                $scope.Welcomes = response.data;
            });
        }
    });
</script>

