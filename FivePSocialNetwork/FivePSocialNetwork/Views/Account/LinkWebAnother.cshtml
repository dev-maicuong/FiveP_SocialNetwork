@using FivePSocialNetwork.Models;
@{
    if (Request.Cookies["user_id"] == null)
    {
        Response.Redirect("/Center/IndexCenter");
    }
    int user_id = int.Parse(Request.Cookies["user_id"].Value.ToString());
    FivePSocialNetWorkEntities db = new FivePSocialNetWorkEntities();
    User user = db.Users.Find(user_id);
    ViewBag.Title = "LinkWebAnother";
    Layout = "~/Views/Shared/_LayoutCenter.cshtml";
}


<style>
    .bg-primary {
        background-color: #525f7f !important;
    }

    a {
        color: white;
        text-decoration: none;
    }

        a:hover {
            color: #00A0C6;
            text-decoration: none;
            cursor: pointer;
        }
</style>
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Link website khác</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Link website khác</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    ...
                </div>
                <div class="col-xl-12">
                    <u style="color:white">Chia sẽ sự nổi tiếng của bạn ở các hệ thống khác liên quan, để mọi người biết đến bạn.</u>
                </div>
                <div class="col-xl-12 mt-3">
                    <div class="row" style="color:white">
                        <div class="col-xl-7">
                            <a data-toggle="collapse" href="#collapseExampleFacebook" role="button" aria-expanded="false" aria-controls="collapseExample">
                                <i class="fab fa-facebook-f"></i> Facebook
                            </a>
                            <div class="collapse" id="collapseExampleFacebook">
                                <div class="card card-body">
                                    <form action="@Url.Action("LinkFacebook","Account")" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="text" name="linkFacebook" class="form-control" value="@user.user_linkFacebook" placeholder="Facebook của bạn" />
                                        <br />
                                        <button type="submit" class="btn btn-success float-right"><i class="far fa-save"></i> Lưu</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-7">
                            <a data-toggle="collapse" href="#collapseExampleGithub" role="button" aria-expanded="false" aria-controls="collapseExample">
                                <i class="fab fa-github"></i> Github
                            </a>
                            <div class="collapse" id="collapseExampleGithub">
                                <div class="card card-body">
                                    <form action="@Url.Action("LinkGithub","Account")" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="text" name="linkGithub" class="form-control" value="@user.user_linkGithub" placeholder="Github của bạn" />
                                        <br />
                                        <button type="submit" class="btn btn-success float-right"><i class="far fa-save"></i> Lưu</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-7">
                            <a data-toggle="collapse" href="#collapseExampleWebsiteAnother" role="button" aria-expanded="false" aria-controls="collapseExample">
                                <i class="fas fa-link"></i> Website khác
                            </a>
                            <div class="collapse" id="collapseExampleWebsiteAnother">
                                <div class="card card-body">
                                    <form method="post">
                                        @Html.AntiForgeryToken()
                                        <textarea name="linkWebAnother" class="form-control" placeholder="Website khác của bạn">@user.user_anotherWeb</textarea>
                                        <br />
                                        <button type="submit" class="btn btn-success float-right"><i class="far fa-save"></i> Lưu</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>