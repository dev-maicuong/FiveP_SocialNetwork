
@{
    ViewBag.Title = "ManagementNotification";
    Layout = "~/Views/Shared/_LayoutCenter.cshtml";
}
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Thông báo</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Thông báo</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="@Url.Action("PostQuestion","Question")" class="btn btn-sm btn-neutral"><i class="far fa-paper-plane"></i> Đặt câu hỏi?</a>
                    <a href="#" class="btn btn-sm btn-neutral"><i class="far fa-edit"></i> Đăng bài viết </a>
                </div>
            </div>
            <!-- Card stats -->

        </div>
    </div>
</div>

<!-- Page content -->
<div class="container-fluid mt--6" ng-app="myApp">
    <div class="row" ng-controller="myCtrl">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">.. Thông báo...</h3>
                </div>

                <div class="float-right" style="padding: 10px;">
                    <a href="#" style="margin-left: 5px;">Nổi tiếng &nbsp;&nbsp;&nbsp; </a>
                    <a href="#" style="margin-left: 5px;">Trả lời &nbsp;&nbsp;&nbsp;</a>


                    <a href="#" style="margin-left: 5px;">&nbsp;&nbsp;&nbsp; <i class="fas fa-undo-alt"></i></a>

                </div>

                <div class="form-group mb-0">
                    <div class="input-group input-group-alternative input-group-merge">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                        </div>
                        <input class="form-control" placeholder="Tìm ..." type="text">
                    </div>
                </div>

                <!-- Light table -->

                <div class="table-responsive">
                    <table class="w-100 mt-3">
                        <thead>
                            <tr>
                                <th scope="col" class="text-center"> Stt</th>
                                <th scope="col" class="sort" data-sort="name">Câu hỏi</th>

                                <th scope="col" class="text-center">
                                    <a href="#"><i class="fas fa-long-arrow-alt-up" style="font-size:25px"></i></a>
                                    <a href="#"><i class="fas fa-long-arrow-alt-down" style="font-size:25px"></i></a>
                                </th>


                            </tr>
                        </thead>
                        <tbody class="list">

                            <tr ng-repeat="x in listNotification">
                                <td class="text-center">
                                    {{$index}}
                                </td>
                                <td scope="row" class="w-75">
                                    <div class="media align-items-center">
                                        <a href="@Url.Action("IndexDetailQuestion","DetailQuestion")" class="mr-2">

                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">
                                                {{x.question_title}}
                                            </span>
                                        </div>
                                    </div>
                                </td>
                                <td class="budget text-center">
                                    <a href="@Url.Action("RecycleBinNotification","Display")"><i class="fas fa-times" style="font-size:23px"></i></a>
                                </td>

                            </tr>

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
<script>
    var app = angular.module('myApp', []);
    app.controller('myCtrl', function ($scope, $http) {
        $http.get("/UserManagement/ListNotification")
            .then(function (response) {
                // First function handles success
                $scope.listNotification = response.data;
            }, function (response) {
                // Second function handles error
                    $scope.listNotification = "Something went wrong";
            });
    });
</script>
