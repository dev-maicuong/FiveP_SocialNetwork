
@{
    ViewBag.Title = "ManagementTick";
    Layout = "~/Views/Shared/_LayoutCenter.cshtml";
}

<div class="header pb-6" style="background-color:orange">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Bài viết đã đánh dấu</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("IndexCenter","Center")">Trang chủ</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Đánh dấu</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    @*<a href="@Url.Action("PostQuestion","Question")" class="btn btn-sm btn-neutral"><i class="far fa-paper-plane"></i> Đặt câu hỏi?</a>
                    <a href="#" class="btn btn-sm btn-neutral"><i class="far fa-edit"></i> Đăng bài viết </a>*@
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6" ng-app="myApp">
    <div class="row" ng-controller="myCtrl">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0"> Bài viết bạn đã đánh dấu</h3>
                </div>
                @*<div class="float-right" style="padding: 10px;">
                    <a href="#" style="margin-left: 5px;">Nổi tiếng &nbsp;&nbsp;&nbsp; </a>
                    <a href="#" style="margin-left: 5px;">Trả lời &nbsp;&nbsp;&nbsp;</a>
                    <a href="#" style="margin-left: 5px;">&nbsp;&nbsp;&nbsp; <i class="fas fa-undo-alt"></i></a>
                </div>*@
                <div class="form-group mb-0">
                    <div class="input-group input-group-alternative input-group-merge">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                        </div>
                        <input class="form-control" ng-model="txtSearch" placeholder="Tìm ..." type="text">
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col" class="sort" data-sort="name">Câu hỏi</th>
                                <th scope="col">
                                    @*<a href="#"><i class="fas fa-long-arrow-alt-up" style="font-size:25px"></i></a>
                                    <a href="#"><i class="fas fa-long-arrow-alt-down" style="font-size:25px"></i></a>*@
                                </th>
                                <th scope="col" class="text-right"> Stt</th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            <tr ng-repeat="x in filteredTodos| filter: txtSearch">
                                <td scope="row">
                                    <div class="media align-items-center">
                                        <a class="mr-2">
                                            <center><i class="fa fa-chevron-up" style="font-size:200%"></i></center>
                                            <center>
                                                <p>{{x.question_totalRate}}</p>
                                            </center>
                                            <center><i class="fa fa-chevron-down mt--3" style="font-size:200%"></i></center>
                                        </a>
                                        <div class="media-body">
                                            <div>
                                                <p class="mb--2" ng-show="x.question_title.length > 50">
                                                    {{x.question_title.substring(0, 50) + "..."}}
                                                </p>
                                                <p class="mb--2" ng-show="x.question_title.length < 51">
                                                    {{x.question_title}}
                                                </p>
                                            </div>
                                            <div class="d-flex align-items-center mt-2">
                                                <i class="fas fa-reply"></i> {{x.question_Answer}} &nbsp;&nbsp; <i class="far fa-comment-dots"></i> {{x.question_totalComment}}&nbsp;&nbsp; <i class="far fa-eye"></i> {{x.question_view}}
                                            </div>
                                        </div>

                                    </div>
                                </td>
                                <td class="budget ">
                                    <a ng-click="unTick(x.tickQuestion_id,$index)" href="#" data-toggle="tooltip" data-placement="top" title="Bỏ đánh dấu"><i class="far fa-check-circle" style="font-size:23px"></i></a>
                                </td>
                                <td class="text-right">
                                    {{$index+1}}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <pagination ng-model="currentPage"
                        total-items="list.length"
                        max-size="maxSize"
                        boundary-links="true">
            </pagination>
        </div>
    </div>
</div>
<script>
    var app = angular.module('myApp', ["ui.bootstrap"]);
    app.controller('myCtrl', function ($scope, $http) {
        $http.get("/UserManagement/ListTick")
            .then(function (response) {
                //Gia dinh
                $scope.filteredTodos = []
                    , $scope.currentPage = 1
                    , $scope.numPerPage = 12
                    , $scope.maxSize = 5;

                //Xac dinh list phan trang
                $scope.makeTodos = function () {
                    $scope.list = response.data;
                }
                $scope.makeTodos();

                //Phân trang
                $scope.$watch('currentPage + numPerPage', function () {
                    var begin = (($scope.currentPage - 1) * $scope.numPerPage)
                        , end = begin + $scope.numPerPage;

                    $scope.filteredTodos = $scope.list.slice(begin, end);
                });
            }, function (response) {
                // Second function handles error
                $scope.content = "Something went wrong";
            });
        $scope.unTick = function (id, idx) {
            $scope.filteredTodos.splice(idx, 1);
            $http.get("/UserManagement/UnTick?id=" + id)
        }
    });
</script>
