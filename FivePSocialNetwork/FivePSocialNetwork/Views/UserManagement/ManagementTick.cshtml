
@{
    ViewBag.Title = "ManagementTick";
    Layout = "~/Views/Shared/_LayoutCenter.cshtml";
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Bài viết đã đánh dấu</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("IndexCenter","Center")">Trang chủ</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Đánh dấu</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="@Url.Action("PostQuestion","Question")" class="btn btn-sm btn-neutral"><i class="far fa-paper-plane"></i> Đặt câu hỏi?</a>
                    <a href="#" class="btn btn-sm btn-neutral"><i class="far fa-edit"></i> Đăng bài viết </a>
                </div>
            </div>
            <!-- Card stats -->

        </div>
    </div>
</div>

<!-- Page content -->
<div class="container-fluid mt--6" ng-app="myApp">
    <div class="row" ng-controller="myCtrl">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0"> Bài viết đã đánh dấu...</h3>
                </div>

                <div class="float-right" style="padding: 10px;">
                    <a href="#" style="margin-left: 5px;">Nổi tiếng &nbsp;&nbsp;&nbsp; </a>
                    <a href="#" style="margin-left: 5px;">Trả lời &nbsp;&nbsp;&nbsp;</a>


                    <a href="#" style="margin-left: 5px;">&nbsp;&nbsp;&nbsp; <i class="fas fa-undo-alt"></i></a>

                </div>

                <div class="form-group mb-0">
                    <div class="input-group input-group-alternative input-group-merge">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                        </div>
                        <input class="form-control" placeholder="Tìm ..." type="text">
                    </div>
                </div>

                <!-- Light table -->

                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col" class="sort" data-sort="name">Câu hỏi</th>

                                <th scope="col">
                                    <a href="#"><i class="fas fa-long-arrow-alt-up" style="font-size:25px"></i></a>
                                    <a href="#"><i class="fas fa-long-arrow-alt-down" style="font-size:25px"></i></a>
                                </th>

                                <th scope="col" class="text-right"> Stt</th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            <tr ng-repeat="x in listTick">
                                <td scope="row">
                                    <div class="media align-items-center">
                                        <a class="mr-2">

                                            <center><i class="fa fa-chevron-up" style="font-size:200%"></i></center>
                                            <center>

                                                <p>..</p>
                                            </center>
                                            <center><i class="fa fa-chevron-down mt--3" style="font-size:200%"></i></center>


                                        </a>
                                        <div class="media-body">
                                            <div>
                                                <p class="mb--2">
                                                    {{x.question_title}}
                                                </p>
                                            </div>
                                            <span class="name mb-0 text-sm">
                                                ..
                                            </span>

                                            <div class="d-flex align-items-center">
                                                ..
                                                <span class="completion mr-2">Vow :..%</span>
                                                <div>
                                                    <div class="progress">
                                                        <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 20%;"></div>

                                                    </div>

                                                </div>
                                                <div>
                                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<i class="fas fa-reply"></i> .. &nbsp;&nbsp; <i class="far fa-comment-dots"></i> ..&nbsp;&nbsp; <i class="far fa-eye"></i> ..
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </td>
                                <td class="budget ">
                                    <a href="@Url.Action("RecycleBinTick","Display")" data-toggle="tooltip" data-placement="top" title="Bỏ đánh dấu"><i class="far fa-check-circle" style="font-size:23px"></i></a>
                                </td>
                                <td class="text-right">
                                    1
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
<script>
    var app = angular.module('myApp', []);
    app.controller('myCtrl', function ($scope, $http) {
        $http.get("/UserManagement/ListTick")
            .then(function (response) {
                // First function handles success
                $scope.listTick = response.data;
            }, function (response) {
                // Second function handles error
                    $scope.listTick = "Something went wrong";
            });
    });
</script>
